generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  fullname String // Nome completo do usuário
  username String  @unique // Nome de usuário
  password String // Senha
  is_admin Boolean @default(false)
}

model Cars {
  id         Int     @id @default(autoincrement())
  brand      String // Marca do carro
  model      String // Modelo do carro
  year       Int // Ano do carro
  color      String // Cor do carro
  ownwe_name String // Nome do proprietário
  imported   Boolean // Se é importado
  plate      String // Placa do carro
}
